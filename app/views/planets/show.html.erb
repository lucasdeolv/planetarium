<div class="container-buy container">
  <h1><%= @planet.name %></h1>
  <img src=<%= @planet.image ? @planet.image : "https://source.unsplash.com/random/?planet" %> alt="" style="height: 300px">
  <div class="the-list">
    <ul>
      <li><strong>Galaxy:</strong> <%=@planet.galaxy%></li>
      <li><strong>Price:</strong> US$ <%=@planet.price%> </li>
      <li><strong>Size:</strong> <%=@planet.size%> km²</li>
      <li><strong>Temperature:</strong> <%=@planet.temperature%> °C </li>
      <li><strong>Pressure:</strong> <%=@planet.pressure%> atm</li>
      <% if @planet.description.present? %>
      <li><strong>Description:</strong> <%=@planet.description%></li>
      <% end %>

    </ul>
  </div>

  <% unless policy(@planet).order? %>
    <div class="buy-planet">
      <%= link_to 'Buy Planet', new_planet_order_path(@planet), class: 'btn btn-light'  %>
    </div>
  <% end %>

  <% if policy(@planet).sell? %>
    <div class="sell-planet">
      <%= link_to 'Sell Planet', edit_planet_path(@planet, sell: true), class: 'btn btn-light'  %>

  <% end %>

  <% if policy(@planet).edit? %>
    <%= link_to 'Edit Planet', edit_planet_path(@planet), class: 'btn btn-light' %>
  <% end %>

  <% if policy(@planet).destroy? %>
    <%= link_to 'Delete Planet', planet_path(@planet), method: :delete, class: 'btn btn-danger' %>
  <% end %>
  </div>
</div>
